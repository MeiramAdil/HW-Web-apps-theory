@model IEnumerable<Phone>
@{
}
<html>
    <body>
        <h3>Smartphones</h3>
        <table>
            <tr>
                <td>Model</td>
                <td>Company</td>
                <td>Cost</td>
                <td></td>
            </tr>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Company</td>
                <td>@p.Price</td>
                <td><a href='~/Mobile/Buy/@p.Id'>Buy</a>></td>
            </tr>
        }
        </table>
    </body>
</html>